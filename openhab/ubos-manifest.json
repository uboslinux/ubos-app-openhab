{
    "type" : "app",

    "roles" : {
        "apache2" : {
            "fixedcontext" : "",
            "apache2modules" : [
                "headers",
                "proxy",
                "proxy_http",
                "proxy_wstunnel",
                "rewrite"
            ],

            "appconfigitems" : [
                {
                    "type"         : "tcpport",
                    "name"         : "mainport"
                },
                {
                    "type"         : "file",
                    "name"         : "${appconfig.apache2.appconfigfragmentfile}",
                    "template"     : "tmpl/htaccess.tmpl",
                    "templatelang" : "varsubst"
                },
                {
                    "type"         : "directory",
                    "name"         : "${appconfig.datadir}",
                    "uname"        : "openhab",
                    "gname"        : "openhab"
                },
                {
                    "type"         : "directory",
                    "name"         : "${appconfig.datadir}/data",
                    "uname"        : "openhab",
                    "gname"        : "openhab",
                    "retentionpolicy"  : "keep",
                    "retentionbucket"  : "datadir"
                },
                {
                    "type"         : "systemd-service",
                    "name"         : "openhab",
                },
            ]
# updaters: sudo ./runtime/bin/update 2.2.0 per https://github.com/openhab/openhab-distro/releases

        },
        "mysql" : {
            "appconfigitems" : [
                {
                    "type"             : "database",
                    "name"             : "maindb",
                    "retentionpolicy"  : "keep",
                    "retentionbucket"  : "maindb",
                    "privileges"       : "all privileges"
                }
            ]
        }
    }
}


    cp -a ${srcdir}/conf/* -t ${pkgdir}/etc/openhab/


    cp -a ${srcdir}/userdata/* ${pkgdir}/var/lib/openhab/
    ln -s /var/log/openhab ${pkgdir}/var/lib/openhab/log
